@model ASP.Models.Shop.ShopIndexPageModel
@{
    ViewData["Title"] = "Shop";
    bool isAuthenticated = Context.User.Identity?.IsAuthenticated ?? false;
}

<div class="text-center">
    <h1 class="display-4">Shop</h1>
</div>

<div class="shop-logo"></div>
@if(isAuthenticated){
    <a asp-action="Admin">Dashboard</a>
}

<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4 mt-4">
    @foreach (var p in Model.ProductGroups)
    {
	    @Html.DisplayFor(m => p);
    }
</div>
